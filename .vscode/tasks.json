{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "build c++ file",
        "command": "g++ -o ",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "${fileDirname}\\${fileBasenameNoExtension}.exe",
          "${file}"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }